{
    "name": "pharaonic/php-slugify",
    "description": "Simplest Slugify for PHP",
    "keywords": [
        "php",
        "slug",
        "slugify",
        "sluggable"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Moamen Eltouny",
            "email": "raggi@pharaonic.io"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Pharaonic\\Slugify\\": "src"
        },
        "files": [
            "src/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Pharaonic\\Slugify\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
